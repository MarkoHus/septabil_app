<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cameraActivities.SkeniraniDokument">


    <Button
        android:id="@+id/NeispravanScanButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="NeIspravan Scan"
        app:iconTint="#26EF02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SkeniraniTekst"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/IspravanScanButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="42dp"
        android:text="Ispravan Scan"
        app:iconTint="#26EF02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SkeniraniTekst"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/SkeniraniTekst"
        android:layout_width="337dp"
        android:layout_height="463dp"
        android:autoSizeTextType="uniform"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>